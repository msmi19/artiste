<div>
  <%= simple_form_for @artwork do |f| %>
    <div>
      <%= f.input :title %>
      <%= f.input :picture %>
      <%= f.input :price %>
    </div>
    <div>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <%= f.submit "Add Your Artwork", class: 'btn btn-primary' %>
    </div>
<% end %>
</div>